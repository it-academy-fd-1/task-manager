<label>
  {{#if label}}
    <p class="text-base font-medium mb-2">{{label}}</p>
  {{/if}}
  {{#if error}}
    <input
      name="{{name}}"
      type="{{type}}"
      value="{{value}}"
      placeholder="{{placeholder}}"
      class="text-base border border-red-500 rounded hover:border-slate-400 focus:border-slate-500 outline-none p-1 block w-full
        {{className}}"
    />
  {{else}}
    <input
      name="{{name}}"
      type="{{type}}"
      value="{{value}}"
      placeholder="{{placeholder}}"
      class="text-base border border-slate-200 rounded hover:border-slate-400 focus:border-slate-500 outline-none p-1 block w-full
        {{className}}"
    />
  {{/if}}

</label>